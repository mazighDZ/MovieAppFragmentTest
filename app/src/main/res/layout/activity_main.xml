<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.section27.movieappfragment.fragment.PopularMovieFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tabLayout"
        tools:layout="@layout/fragment_populare_movie" />



    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:background="#4CB851"
        android:orientation="horizontal"
        app:tabSelectedTextColor="@color/white"
        app:tabTextColor="@color/black">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/popularMovie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Popular Movie" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/topMovie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top Movie" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/popularSeries"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Popular Series" />

    </com.google.android.material.tabs.TabLayout>

</RelativeLayout>
